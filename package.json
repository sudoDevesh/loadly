{
  "version": "1.1.0",
  "name": "loadly",
  "description": "Load testing CLI + React UI with live analytics",
  "type": "module",
  "bin": {
    "loadly": "./bin/cli.js"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sudoDevesh/loadly.git"
  },
  "bugs": {
    "url": "https://github.com/sudoDevesh/loadly/issues"
  },
  "homepage": "https://loadly.deveshk.dev",
  "scripts": {
    "dev": "node server/index.js --dev",
    "build": "npm run build:ui",
    "build:ui": "cd ui && npm install && npm run build",
    "prepublishOnly": "npm run build",
    "start": "node bin/cli.js",
    "pack:check": "npm pack && tar -tf loadly-.tgz | sort && del loadly-.tgz 2>nul || rm -f loadly-*.tgz",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  },
  "files": [
    "bin",
    "server",
    "core",
    "ui/dist",
    "package.json",
    "README.md"
  ],
  "dependencies": {
    "express": "^4.19.2",
    "open": "^10.1.0",
    "picocolors": "^1.0.0",
    "ws": "^8.18.0"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "load-testing",
    "cli",
    "react",
    "websocket",
    "performance",
    "stress-test",
    "api-testing",
    "http-benchmark",
    "web-performance",
    "scalability",
    "throughput",
    "concurrency-test",
    "server-load",
    "latency-measure",
    "automation",
    "dev-tool",
    "nodejs-tool",
    "frontend-testing",
    "backend-testing"
  ],
  "author": "sudoDevesh",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "babel-jest": "^30.1.1",
    "jest": "^30.1.1"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "roots": [
      "<rootDir>/__tests__"
    ]
  }
}
